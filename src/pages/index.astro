---
import AboutMe from "@/components/AboutMe.astro";
import BriefCase from "@/components/icons/BriefCase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Expirience from "@/components/Experience.astro";
import Hero from "@/components/Hero.astro";
import Layout from "@/layouts/Layout.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import UserIcon from "@/components/icons/User.astro";
---

<Layout
	title="Portfolio de rmcam. Desarrollador y Programador Web con +3 años de experiencia."
	description="Portfolio de rmcam. Desarrollador y Programador Web con +3 años de experiencia."
>
	<main class="px-4">
		<SectionContainer class="py-36 flex flex-col items-center justify-items-center">
			<Hero>
				<slot />
			</Hero>
		</SectionContainer>

		<SectionContainer class="py-20 grid" id="experiencia">
			<h2 class="text-2xl opacity-90 font-bold flex gap-x-2 items-center py-5">
				<BriefCase class="inline size-7" />
				Experiencia
			</h2>
			<Expirience />
		</SectionContainer>

		<SectionContainer class="py-4 md:py-4" id="proyectos">
			<h2 class="text-2xl opacity-90 font-bold flex gap-x-2 items-center">
				<CodeIcon class="inline size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
		<SectionContainer class="py-10 md:py-10" id="sobre-mi">
			<h2 class="text-2xl opacity-90 font-bold flex gap-x-2 items-center">
				<UserIcon class="inline size-7" />
				Sobre mi
			</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>
