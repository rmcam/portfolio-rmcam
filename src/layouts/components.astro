---
import Badge from "../components/Badge.astro";
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/icons/SocialPill.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
---

<Layout
    title="Components of design-system"
    description="Components of portfolio"
>
    <SectionContainer class="py-40 pb-32 flex flex-col fap-y-8">
        <article class="mb-10">
            <h1 class="mb-4 text-xl font-semi-bold">&lt;Badge&gt;</h1>

            <Badge>Disponible para trabajar</Badge>
        </article>
        <article class="mb-10">
            <h1 class="mb-4 text-xl font-semi-bold">&lt;SocialPill&gt;</h1>
            <div class="flex">
                
            <SocialPill href="https://linkedin.com/in/rmcam/">
                <LinkedInIcon class="size-4 md:size-6" />Linkedin
            </SocialPill>
            </div>
        </article>
    </SectionContainer>
</Layout>
